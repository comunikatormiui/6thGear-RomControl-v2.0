<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
                  xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.wubydax.romcontrol.v2.prefs.ImageHeaderPreference
        app:imageSource="@drawable/android"/>

    <PreferenceScreen
        android:title="@string/status_bar">
        <com.wubydax.romcontrol.v2.prefs.MySwitchPreference
            android:defaultValue="0"
            android:key="isShowNetworkType"
            android:summaryOff="@string/switch_hide"
            android:summaryOn="@string/switch_show"
            android:title="@string/show_network_type"
            app:isSilent="false"
            app:packageNameToKill="com.android.systemui"/>

        <com.wubydax.romcontrol.v2.prefs.MyListPreference
            android:entries="@array/status_bar_clock_style_entries"
            android:title="@string/status_bar_clock_style"
            android:key="status_bar_clock_style"
            android:summary="%s"
            android:entryValues="@array/status_bar_clock_style_values" />

        <com.wubydax.romcontrol.v2.prefs.IntentDialogPreference
            android:key="longpress_clock_custom_app"
            android:title="@string/longpress_clock_app"
            app:intentSeparator="##"/>

        <com.wubydax.romcontrol.v2.prefs.IntentDialogPreference
            android:key="press_hwsignal_custom_app"
            android:title="@string/press_signal_cluster_app"
            app:intentSeparator="##"/>

        <com.wubydax.romcontrol.v2.prefs.IntentDialogPreference
            android:key="longpress_signal_cluster_custom_app"
            android:title="@string/longpress_signal_cluster_app"
            app:intentSeparator="##"/>
    </PreferenceScreen>

    <PreferenceScreen
        android:title="@string/navigation_bar">
        <PreferenceCategory
            android:title="@string/back_button">
            <com.wubydax.romcontrol.v2.prefs.MyListPreference
                android:entries="@array/navbar_kbtn_key"
                android:title="@string/longpress_back_key_action"
                android:key="longpress_back_key"
                android:defaultValue="0"
                android:entryValues="@array/navbar_kbtn_value" />
        </PreferenceCategory>

        <PreferenceCategory
            android:title="@string/home_button">
            <com.wubydax.romcontrol.v2.prefs.MySwitchPreference
                android:defaultValue="1"
                android:key="enable_stock_hw_assist"
                android:summaryOff="@string/switch_off"
                android:summaryOn="@string/switch_on"
                android:title="Now on Tap" />
            <com.wubydax.romcontrol.v2.prefs.MyListPreference
                android:entries="@array/navbar_kbtn_key"
                android:title="@string/longpress_home_key_action"
                android:key="longpress_home_key"
                android:defaultValue="0"
                app:reverseDependency="enable_stock_hw_assist"
                android:entryValues="@array/navbar_kbtn_value" />
        </PreferenceCategory>
    </PreferenceScreen>

    <PreferenceScreen
        android:title="@string/notification_panel">
        <com.wubydax.romcontrol.v2.prefs.MyListPreference
            android:entries="@array/low_battery_savemodenotif_entries"
            android:title="@string/low_battery_savemode"
            android:key="low_battery_savemodenotif"
            android:defaultValue="20"
            android:entryValues="@array/low_battery_savemodenotif_values" />

        <com.wubydax.romcontrol.v2.prefs.MyListPreference
            android:entries="@array/low_battery_supermodenotif_entries"
            android:title="@string/low_battery_supermode"
            android:key="low_battery_supermodenotif"
            android:defaultValue="10"
            android:entryValues="@array/low_battery_supermodenotif_values" />
    </PreferenceScreen>

    <PreferenceScreen
        android:title="@string/recents_apps">
        <com.wubydax.romcontrol.v2.prefs.MySwitchPreference
            android:defaultValue="1"
            android:key="quick_launch_visible"
            android:summaryOff="@string/switch_hide"
            android:summaryOn="@string/switch_show"
            android:title="@string/quick_launch_panel"
            app:isSilent="false"
            app:packageNameToKill="com.android.systemui"/>
    </PreferenceScreen>

</PreferenceScreen>